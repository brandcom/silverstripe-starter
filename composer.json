{
    "name": "brandcom/silverstripe-docker-starter",
    "type": "silverstripe-recipe",
    "description": "Simplify the installation of a Silverstripe Dev Environment.",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "dnadesign/silverstripe-elemental": "^4.9",
        "jbennecker/silverstripe-analytics": "^1.0",
        "jbennecker/silverstripe-honeypotprotection": "^1.0",
        "silverstripe/login-forms": "~4.7.0@stable",
        "silverstripe/recipe-cms": "~4.11.0@stable",
        "silverstripe/recipe-plugin": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "extra": {
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "platform": {
        "php": "8.1.7",
        "ext-intl": "0"
    }
}
